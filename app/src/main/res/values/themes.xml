<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BNA" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- the parent style for all BNA texts-->
    <style name="common_bna_text">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/bna_green_color</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- the parent style for all BNA buttons-->
    <style name="common_bna_buttons">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">@dimen/buttons_height</item>
        <item name="android:layout_marginTop">@dimen/view_margins</item>
    </style>
    <!-- style to make the application on full screen mode -->
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- common style to be used for all labels in the application -->
    <style name="common_text_style" parent="common_bna_text">
        <item name="android:layout_marginStart">@dimen/view_constraints_horizental_margins</item>
        <item name="android:layout_marginEnd">@dimen/view_constraints_horizental_margins</item>
        <item name="android:layout_marginTop">@dimen/view_margins</item>
    </style>
    <!-- common style to be used for application edit text -->
    <style name="common_edit_text_style">
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">@dimen/view_constraints_horizental_margins</item>
        <item name="android:layout_marginTop">@dimen/view_margins</item>
        <item name="android:paddingStart">@dimen/edit_text_padding</item>
        <item name="android:paddingEnd">@dimen/edit_text_padding</item>
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="android:textColorHint">@color/edit_text_hint_color</item>
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="layout_constraintHorizontal_bias">0.0</item>
    </style>
    <!-- common style for green gradient button -->
    <style name="common_green_gradient_btn" parent="common_bna_buttons">
        <item name="android:background">@drawable/login_button_shape</item>
        <item name="android:textColor">@drawable/button_states_text_color</item>
    </style>
    <!-- common style for white button -->
    <style name="common_blue_btn" parent="common_bna_buttons">
        <item name="android:background">@color/app_light_blue_color</item>
        <item name="android:textColor">@drawable/button_states_text_color</item>
    </style>
    <!-- common style for white button -->
    <style name="common_home_btn" parent="common_bna_buttons">
        <item name="android:textColor">@color/app_light_blue_color</item>
        <item name="android:padding">@dimen/home_btns_padding</item>
        <item name="android:gravity">bottom|center_horizontal</item>
    </style>
</resources>